<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Personnage">

    <LinearLayout
        android:id="@+id/linearLayoutTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal|bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.083"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023"
        android:layout_marginLeft="20sp">

        <FrameLayout
            android:layout_width="73dp"
            android:layout_height="71dp"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@drawable/cadre_noir"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.242"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.975">
            <Button
                android:id="@+id/buttonChangerCouleurPeau1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/boutons"
                android:onClick="changerCouleurPeau1"
                app:backgroundTint="@color/couleurPeau1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.953"
                android:adjustViewBounds="true"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="73dp"
            android:layout_height="71dp"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@drawable/cadre_noir"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.242"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.975">
            <Button
                android:id="@+id/buttonChangerCouleurPeau2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/boutons"
                android:onClick="changerCouleurPeau2"
                app:backgroundTint="@color/couleurPeau2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.953"
                android:adjustViewBounds="true"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="73dp"
            android:layout_height="71dp"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@drawable/cadre_noir"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.242"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.975">
            <Button
                android:id="@+id/buttonChangerCouleurPeau3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/boutons"
                android:onClick="changerCouleurPeau3"
                app:backgroundTint="@color/couleurPeau3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.953"
                android:adjustViewBounds="true"/>
        </FrameLayout>
    </LinearLayout>



    <ImageView
        android:id="@+id/imageViewPersonnage"
        android:layout_width="245dp"
        android:layout_height="519dp"
        android:src="@drawable/male_color2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.50" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPagerChapeau"
        android:layout_width="97dp"
        android:layout_height="97dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.061" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPagerHaut"
        android:layout_width="245dp"
        android:layout_height="520dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageViewPersonnage"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPagerBas"
        android:layout_width="245dp"
        android:layout_height="520dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageViewPersonnage"
        app:layout_constraintVertical_bias="0.0" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.083"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/buttonProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="displayProfile"
            app:backgroundTint="@color/jaunePlantGO"
            app:fabCustomSize="80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/genderneutraluser" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_margin="5sp"
            android:elevation="7dp"
            android:fontFamily="@font/boutons"
            android:text="Profil"
            android:textColor="#000000" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
