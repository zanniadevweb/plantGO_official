<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inventaire">

    <!-- viewpager to show images -->

    <Button
        android:id="@+id/buttonProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="23dp"
        android:onClick="displayProfile"
        android:text="Retour" />

    <ImageView
        android:id="@+id/imageViewTorso"
        android:layout_width="90dp"
        android:layout_height="116dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="258dp"
        android:layout_marginTop="149dp"
        android:src="@drawable/torso1" />

    <ImageView
        android:id="@+id/imageViewHat"
        android:layout_width="85dp"
        android:layout_height="128dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="152dp"
        android:src="@drawable/hat1" />

    <TextView
        android:id="@+id/textViewTorso1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="269dp"
        android:layout_marginTop="118dp"
        android:text="Torse 1" />

    <TextView
        android:id="@+id/textViewHat1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="299dp"
        android:text="Chapeau 1" />

    <Switch
        android:id="@+id/switchTorso1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="273dp"
        android:checked="true"
        android:clickable="false"
        android:text="Disponible" />

    <Switch
        android:id="@+id/switchHat1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="265dp"
        android:layout_marginEnd="53dp"
        android:checked="true"
        android:clickable="false"
        android:text="Disponible" />

    <TextView
        android:id="@+id/textViewTorso2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="266dp"
        android:layout_marginTop="458dp"
        android:text="Torse 2" />

    <TextView
        android:id="@+id/textViewHat2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="456dp"
        android:layout_marginEnd="295dp"
        android:text="Chapeau 2" />

    <ImageView
        android:id="@+id/imageViewTorso2"
        android:layout_width="107dp"
        android:layout_height="133dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="250dp"
        android:layout_marginTop="510dp"
        android:src="@drawable/torso2_off" />

    <ImageView
        android:id="@+id/imageViewHat2"
        android:layout_width="90dp"
        android:layout_height="145dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="46dp"
        android:layout_marginTop="501dp"
        android:src="@drawable/hat2_off" />

    <Switch
        android:id="@+id/switchTorso2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="248dp"
        android:layout_marginTop="662dp"
        android:clickable="false"
        android:text="Verrouillé" />

    <Switch
        android:id="@+id/switchHat2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="661dp"
        android:layout_marginEnd="267dp"
        android:clickable="false"
        android:text="Verrouillé" />


</RelativeLayout>
